server {
    listen  80;
    server_name  laitovo.de  www.laitovo.de;
    rewrite ^ https://laitovo.de$request_uri? permanent; #301 redirect
}
server {
    listen  80;
    server_name  m.laitovo.de;
    rewrite ^ https://m.laitovo.de$request_uri? permanent; #301 redirect
}
server {
    listen 443 ssl;
    ssl_certificate     /etc/letsencrypt/live/laitovo.de/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/laitovo.de/privkey.pem;

    server_name  www.laitovo.de;
    rewrite ^ https://laitovo.de$request_uri? permanent; #301 redirect
}

server {
    charset utf-8;
    client_max_body_size 128M;

    listen 443 ssl;
    ssl_certificate     /etc/letsencrypt/live/laitovo.de/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/laitovo.de/privkey.pem;

    server_name laitovo.de;
    root        /var/www/laitovo/de;
    index       index.php;

#    access_log  /path/to/basic/log/access.log;
#    error_log   /path/to/basic/log/error.log;


    location / {
        try_files $uri $uri/ /index.php$is_args$args;
    }

    # uncomment to avoid processing of calls to non-existing static files by Yii
    #location ~ \.(js|css|png|jpg|gif|swf|ico|pdf|mov|fla|zip|rar)$ {
    #    try_files $uri =404;
    #}
    #error_page 404 /404.html;

    # deny accessing php files for the /assets directory
    location ~ ^/(assets|themes)/.*\.php$ {
        deny all;
    }
    location ~ ^/admin/(assets|themes)/.*\.php$ {
        deny all;
    }

    location ~ \.php$ {
        include fastcgi_params;
        fastcgi_param SCRIPT_FILENAME $document_root$fastcgi_script_name;
        fastcgi_pass unix:/run/php/php7.0-fpm.sock;
        #fastcgi_read_timeout 300;
        try_files $uri =404;
    }

    location ~* /\. {
        deny all;
    }
}

server {
    charset utf-8;
    client_max_body_size 128M;

